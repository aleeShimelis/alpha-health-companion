FROM python:3.11-slim

# Build tools (safe even with psycopg2-binary; helps for other deps)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 1) Copy requirements first (better caching)
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# 2) Copy the app code
COPY app /app/app

EXPOSE 8000
COPY alembic.ini /app/alembic.ini
COPY migrations /app/migrations
COPY run_migrations.py /app/run_migrations.py
CMD ["sh", "-lc", "python /app/run_migrations.py && uvicorn app.main:app --host 0.0.0.0 --port 8000"]
